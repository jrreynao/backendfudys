
# Ejemplo de variables de entorno para backend Node.js compatible con cPanel
PORT=3000
DB_HOST=localhost
DB_USER=usuario_db
DB_PASSWORD=tu_password
DB_NAME=nombre_db
DB_PORT=3306
DB_CONNECT_TIMEOUT_MS=10000
DB_ACQUIRE_TIMEOUT_MS=10000
# Para cPanel con socket, usar DB_SOCKET en vez de host/puerto, por ejemplo:
# DB_SOCKET=/var/lib/mysql/mysql.sock

# SSL opcional (proveedores que lo requieran)
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=true
# DB_SSL_CA=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
JWT_SECRET=tu_jwt_secret
SMTP_HOST=smtp.tuservidor.com
SMTP_PORT=587
SMTP_USER=usuario_smtp
SMTP_PASS=tu_password_smtp
FRONTEND_URL=https://tudominio.com
